{
    "name": "just-commands",
    "displayName": "Just QuickRun: One-key recipe runner",
    "description": "Run Justfile recipes from VS Code with one key. Press Alt+J to pick a recipe (single-key hotkeys) and run it in the integrated terminal. Requires Just installed and available on your PATH.",
    "version": "0.0.3",
    "author": "Kumar Shantanu",
    "license": "MIT",
    "publisher": "KumarShantanu",
    "repository": {
        "type": "git",
        "url": "https://github.com/piper-of-dawn/just-quickrun"
    },
    "icon": "media/icon.png",
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:Justfile",
        "onCommand:justRun"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "justRun",
                "title": "Just Run Recipe"
            }
        ],
        "keybindings": [
            {
                "command": "justRun",
                "key": "alt+j",
                "mac": "alt+j",
                "linux": "alt+j",
                "win": "alt+j"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.92.0",
        "@types/node": "20.14.2",
        "typescript": "^5.4.5"
    }
}